services:
  app:
    build:
      context: . 
      dockerfile: Dockerfile
    ports:
      - "8080:80" 

    environment:
      DB_HOST: db 
      DB_USER: postgres
      DB_PASS: postgres
      DB_NAME: sdn

  db:
    image: postgres:latest
    environment:
      POSTGRES_DB: sdn
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    volumes:
      - postgres_data:/var/lib/postgresql/data 
      - ./db_backup:/docker-entrypoint-initdb.d/ 

volumes:
  postgres_data: 
